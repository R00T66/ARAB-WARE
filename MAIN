--// PRELOAD

repeat wait() until game["IsLoaded"]
repeat wait() until game:GetService("Players")["LocalPlayer"]
repeat wait() until game:GetService("Players")["LocalPlayer"]["Character"]

--// VARIABLES

local Client = game:GetService("Players")["LocalPlayer"]
local Settings = getgenv().Settings

--// STUFF

local SETUP = loadstring(
   game:HttpGet("https://raw.githubusercontent.com/R00T66/ARAB-WARE/main/DATA")
)()

--// UI SETUP 

local ORION = loadstring(
   game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source")
)(); local WINDOW = ORION:MakeWindow({
   Name = "ARAB-WARE",
   HidePremium = true,
   SaveConfig = false,
   ConfigFolder = nil,
   IntroText = "ARAB-WARE",
   IntroIcon = "rbxassetid://8288908869"
})

--// TAB SETUP

local MAIN = WINDOW:MakeTab({
   Name = "MAIN",
   Icon = nil,
   PremiumOnly = false
})

local CLIENT = WINDOW:MakeTab({
   Name = "CLIENT",
   Icon = nil,
   PremiumOnly = false
})

local CHARACTER = WINDOW:MakeTab({
   Name = "CHARACTER",
   Icon = nil,
   PremiumOnly = false
})

local SETTINGS = WINDOW:MakeTab({
   Name = "SETTINGS",
   Icon = nil,
   PremiumOnly = false
})

--// Connections

Client.CharacterAdded:Connect(function(CHARACTER) -- Customization
    if not CHARACTER:FindFirstChild("DONE") then
       local DONE = Instance.new("Folder")
       DONE.Name = "DONE"
       DONE.Parent = CHARACTER
    end
    
    local Hats = Settings["HATS"]
    
    if #Hats ~= 0 then
       for i, v in pairs(Hats) do
          if CHARACTER:FindFirstChild("DONE") then
             local Folder = CHARACTER:FindFirstChild("DONE")
             
             if not Folder:FindFirstChild(v) then
                SETUP.Hat(v)
             end
          end
       end
    end
    
    if Settings["HEADLESS"] then
       if CHARACTER:FindFirstChild("DONE") then
          Instance.new(
           "StringValue",
           CHARACTER:FindFirstChild("DONE")
          ).Name = "HEADLESS"
       end
       SETUP.Headless()
    end
    
    if Settings["KORBLOX"] then
       if CHARACTER:FindFirstChild("DONE") then
          Instance.new(
           "StringValue",
           CHARACTER:FindFirstChild("DONE")
          ).Name = "KORBLOX"
       end
       SETUP.Korblox()
    end
    
end)
